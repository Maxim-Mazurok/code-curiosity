.col-xs-12
  .box-header
    %h2 Reward Opensource contributors!
  .box-body
    - INFO['benefits'].keys.each do |key|
      .col-xs-12.col-sm-4.col-md-4
        %ul.false.g-green.benefits
          %li.title
            %big #{key.camelize}
          %li.desc
            %ul.point
              - INFO['benefits'][key].each do |stmt|
                %li #{stmt}
          - unless key == 'free'
            %li
              - if user_signed_in?
                = link_to("Subscribe", new_sponsorer_detail_path(type: key.camelize), class: "btn btn-lg btn-success", remote: true)
              - else
                = link_to("Subscribe", omniauth_authorize_path(:user, :github, user: key.camelize), class: "btn btn-lg btn-success")
